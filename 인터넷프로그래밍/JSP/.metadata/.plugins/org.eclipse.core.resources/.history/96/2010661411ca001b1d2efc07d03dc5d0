<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.ProductMapper">

	<insert id="productInsert" parameterType="ProductDTO"  useGeneratedKeys="true" keyProperty="pid">
		INSERT INTO product (pname,pcontent,pprice,pimage,pcode) VALUES(#{pname}, #{pcontent}, #{pprice}, #{pimage}, #{pcode});
	</insert>
	
	<delete id="productDelete" parameterType="int">
		DELETE FROM product WHERE pid = #{pid}
	</delete>
	
	<select id="SearchAll" parameterType="ProductPage" resultType="ProductDTO">
		SELECT * FROM product WHERE pcode = #{pcode} ORDER BY pcode DESC LIMIT #{start}, #{end}
	</select>
	
	<select id="getTotalCnt" parameterType="int" resultType="int">
		SELECT COUNT(*) FROM product WHERE pcode = #{pcode}
	</select>
	
	<select id="SearchOne" parameterType="int" resultType="ProductDTO">
		SELECT * FROM product WHERE pid = #{pid}
	</select>

</mapper>