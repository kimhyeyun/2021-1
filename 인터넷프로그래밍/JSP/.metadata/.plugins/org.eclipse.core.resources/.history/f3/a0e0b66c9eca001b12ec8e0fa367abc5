<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.QAMapper">
	<insert id="qaInsert" parameterType="QADTO">
		INSERT INTO qna (rtitle, rcontent, rdate, userid) VALUES(#{rtitle}, #{rcontent}, now(), #{userid})
	</insert>
	
	<delete id="reviewDelete" parameterType="int">
		DELETE FROM review WHERE rid = #{rid}
	</delete>
	
	<select id="reviewSearchAll" parameterType="ReviewPage" resultType="ReviewDTO">
		SELECT * FROM review WHERE rid = #{rid} LIMIT #{start}, #{end}
	</select>
	
	<select id="reviewgetTotalCnt" resultType="int">
		SELECT COUNT(*) FROM review 
	</select>
	
	<select id="reviewSearchOne" parameterType="int" resultType="ReviewDTO">
		SELECT * FROM review WHERE rid = #{rid}
	</select>
</mapper>