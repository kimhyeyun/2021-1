<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.ReviewMapper">
	<insert id="reviewInsert" parameterType="ReviewDTO">
		INSERT INTO review (rtitle, rcontent, rdate, userid) VALUES(#{rtitle}, #{rcontent}, now(), #{userid})
	</insert>
	
	<delete id="reviewDelete" parameterType="int">
		DELETE FROM review WHERE rid = #{rid}
	</delete>
	
	<select id="reviewSearchAll" parameterType="ReviewPage" resultType="ReviewDTO">
		SELECT * FROM review WHERE rid = #{rid} LIMIT #{start}, #{end}
	</select>
	
	<select id=""></select>
</mapper>